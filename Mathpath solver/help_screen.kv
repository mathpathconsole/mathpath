<HelpScreen>:
    ScreenManager:
        MDScreen:
            md_bg_color: 1, 1, 1, 1
            MDBoxLayout:
                orientation:'vertical'
                padding:0
                pos_hint: {"top": 1}
                MDTopAppBar:
                    id:helptoolbar
                    title: "About"
                    opposite_colors: True
                    anchor_title:'center'
                    elevation:0
                    specific_text_color:"black" 
                    md_bg_color: get_color_from_hex("#7A89EC")
                
                ScrollView:
                    bar_color:(117/255,117/255,117/255)
                    bar_width:3
                    MDList:
                        MDLabel:
                            id:helplabel
                            text:'Here is Help Documentation.' 
                            color: get_color_from_hex("#212121")
                            markup:True
                            size_hint_y:None
                            padding_x:'2dp'
                            height:self.texture_size[1] 
                            write:root.write()

                        MDGridLayout:
                            rows:4
                            cols:2
                            adaptive_height:True
                            spacing:'12dp'
                            padding:'5dp'
                            size_hint_x:0.45

                            MDRectangleFlatIconButton:
                                text:'Algebra'
                                icon: 'equal'
                                text_color: 'black'
                                line_color: "black"
                                icon_color: "green"
                                md_bg_color:'#D8ECFF'
                                size_hint_x:0.45
                                on_release:root.help_topics(topic=1)
                            MDRectangleFlatIconButton:
                                text:'Calculus'
                                icon: 'math-integral'
                                text_color: 'black'
                                line_color: "black"
                                icon_color: "green"
                                md_bg_color:'#FDFFAE'
                                size_hint_x:0.45
                                on_release:root.help_topics(topic=2)
                            MDRectangleFlatIconButton:
                                text:'Diff. Equations'
                                icon: 'function-variant'
                                text_color: 'black'
                                line_color: "black"
                                icon_color: "green"
                                md_bg_color:'#ABD5FF'
                                size_hint_x:0.45
                                on_release:root.help_topics(topic=3)
                            MDRectangleFlatIconButton:
                                text:'Matrices'
                                icon: 'matrix'
                                text_color: 'black'
                                line_color: "black"
                                icon_color: "green"
                                md_bg_color:'#FCFF86'
                                size_hint_x:0.45
                                on_release:root.help_topics(topic=4)
                            MDRectangleFlatIconButton:
                                text:'Graphs'
                                icon: 'chart-bell-curve-cumulative'
                                text_color: 'black'
                                line_color: "black"
                                icon_color: "green"
                                md_bg_color:'#70B8FF'
                                size_hint_x:0.45
                                on_release:root.help_topics(topic=5)
                            MDRectangleFlatIconButton:
                                text:'Series'
                                icon: 'sigma'
                                text_color: 'black'
                                line_color: "black"
                                icon_color: "green"
                                md_bg_color:'#FAFF50'
                                size_hint_x:0.45
                                on_release:root.help_topics(topic=6)
                            MDRectangleFlatIconButton:
                                text:'Vector Fields'
                                icon: 'arrow-bottom-right'
                                text_color: 'black'
                                line_color: "black"
                                icon_color: "green"
                                md_bg_color:'#43A1FF'
                                size_hint_x:0.45
                                on_release:root.help_topics(topic=7)
                            MDRectangleFlatIconButton:
                                text:'Special Functions'
                                icon: 'function'
                                text_color: 'black'
                                line_color: "black"
                                icon_color: "green"
                                md_bg_color:'#F8FF18'
                                size_hint_x:0.45
                                on_release:root.help_topics(topic=8)

                        MDLabel:
                            id:helplabel_last
                            text:'' 
                            color: get_color_from_hex("#212121")
                            markup:True
                            size_hint_y:None
                            padding_x:'2dp'
                            height:self.texture_size[1] 
                            write:root.write_last()

                        MDBoxLayout:
                            oriantation:'horizontal'
                            adaptive_height:True
                            spacing:'20dp'
                            padding:'2dp'
                            size_hint_x:0.7
                            
                            MDRoundFlatIconButton:
                                text:'Website'
                                icon:'web'
                                size_hint_x:0.7
                                text_color:'black'
                                icon_color:'blue'
                                line_color:'gray'
                                on_release:
                                    import webbrowser
                                    webbrowser.open('https://mathpathconsole.github.io/')
                            MDRoundFlatIconButton:
                                text:'Mail'
                                icon:'gmail'
                                size_hint_x:0.7
                                text_color:'black'
                                icon_color:'red'
                                line_color:'gray'
                                on_release:
                                    import webbrowser
                                    webbrowser.open('mailto:help.starsofthesky@gmail.com')
                            MDRoundFlatIconButton:
                                text:'Github'
                                icon:'github'
                                size_hint_x:0.7
                                text_color:'black'
                                icon_color:'black'
                                line_color:'gray'
                                on_release:
                                    import webbrowser
                                    webbrowser.open('https://github.com/mathpathconsole/mathpath')