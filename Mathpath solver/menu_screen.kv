#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import Snackbar kivymd.uix.snackbar.Snackbar 
 
<MenuScreen>:
    id:menuscreen
    MDNavigationLayout:
        ScreenManager:
            MDScreen:
                md_bg_color: 1, 1, 1, 1
                MDBoxLayout:
                    id:box_layout
                    orientation:'vertical'
                    pos_hint: {"top": 1}
                    adaptive_height:True
                    md_bg_color: 1, 1, 1, 1
                    MDTopAppBar:
                        id:toolbar
                        title: "Mathpath Console"
                        anchor_title:'center'
                        opposite_colors:True
                        elevation:0
                        left_action_items: [["console"]]
                        right_action_items:[["menu",lambda x: nav_drawer.set_state("open")]]  #----nav draver
                        md_bg_color: get_color_from_hex("#7A89EC")

                    MDTextField:
                        id:txt1
                        text:""
                        multiline:True
                        font_size:'19dp'
                        max_height: "120dp"
                        text_color_focus:'#444343'
                        hint_text:'Type a math expression'
                        helper_text:""
                        helper_text_mode: "persistent"
                        helper_text_color_normal:'red'
                        active_line:False
                        use_handles:False
                        hint_text_color_focus:'#6B6B6B'  
                        on_text:root.fallow_text()
                        on_focus:root.checkfocus()
                        on_touch_down:root.checktouch()
                        keyboard_mode:'managed'
                            
                    AnchorLayout:
                        anchor_x: 'right'
                        anchor_y: 'top'   
                        
                        MDBottomNavigation:
                            panel_color: "#ffffff"
                            size_hint_y:None
                            pos_hint:{'top':1}
                            selected_color_background: "#F6F6F6"

                            MDBottomNavigationItem:
                                id:dataset
                                text: "Dataset"
                                on_tab_release:root.calc_graphdata()
                                
                            MDBottomNavigationItem:
                                id:change_2d
                                text: "2D"
                                on_tab_release:root.add_graphs(mul=1)
                                
                            MDBottomNavigationItem:
                                id:change_3d
                                text: "3D"
                                on_tab_release:root.add_graphs(mul=2)

                            MDBottomNavigationItem:
                                id:change_tools
                                text: "Matrices"
                                on_tab_press:root.calc_matrices()
                
                            
                    
                    Widget:
                        size_hint_y:None
                        height:dp(112)
                        
                    MDBoxLayout:
                        adaptive_height:True
                        orientation:'horizontal'
                        AnchorLayout:
                            anchor_x:'left'
                            Label:
                                id:lbl0
                                text:''
                                color:'black' 
                                font_name:'dejavusansmono.ttf'
                                font_size:'14dp'
                                size_hint_x:None
                                text_size:None,None
                                size:self.texture_size
                                padding_x:3
                                markup:True
                        MDIconButton:
                            icon:'content-copy'
                            halign:'right'
                            icon_size:'18sp'
                            markup:True
                            md_bg_color:'#FFFFFF'
                            size_hint_x:None
                            on_release:
                                root.button_copy(name='in')
                                Snackbar(text="[In] Copied!", duration = 0.7).open()
                        Label:
                            id:lbl_black  
                            text:'[In]'
                            color:'black'
                            font_size:'12dp'
                            size:self.texture_size
                            size_hint_x:None
                            halign:'right'
                            markup:True
                                                          
                    Widget:
                        size_hint_y:None
                        height:dp(67)
    
                    MDBoxLayout:
                        adaptive_height:True
                        orientation:'horizontal'
                        spacing:'0dp'
                        padding:'0dp'
                        AnchorLayout:
                            anchor_x:'left'
                            Label:
                                id:lblcol
                                text:' '
                                font_size:'30dp'
                                background_color:(176/255,3/255,3/255,0.8)
                                size_hint_x:None
                                size_hint_y:0
                                text_size:None,None
                                size:self.texture_size 
                                canvas.before:
                                    Color:
                                        rgba:self.background_color
                                    Rectangle:
                                        size:self.size
                                        pos:self.pos

                            Label:
                                id:lbl1
                                text:''
                                color:'blue'
                                font_name:'dejavusansmono.ttf'
                                font_size:'18dp' 
                                size_hint_x:None
                                text_size:None,None
                                size:self.texture_size
                                padding_x:'8dp'
                                markup:True
                        MDIconButton:
                            icon:'content-copy'
                            halign:'right'
                            icon_size:'18sp'
                            markup:True
                            md_bg_color:'#FFFFFF'
                            size_hint_x:None
                            size:self.size
                            on_release:
                                root.button_copy(name='out')
                                Snackbar(text="[Out] Copied!", duration = 0.7).open()                        
                        Label:
                            id:lbl_blue  
                            text:'[Out]'
                            color:'black'
                            font_size:'12dp'
                            size:self.texture_size
                            size_hint_x:None
                            halign:'right'
                            markup:True

                                                   
        MDNavigationDrawer:
            id:nav_drawer
            radius: (16, 0, 0, 16)
            anchor: "right"
            close_on_click:True                
            md_bg_color: get_color_from_hex("#FFFFFF")
            #enable_swiping:False
            MDBoxLayout:
                orientation: "vertical"
                padding: '2dp'
                spacing: '2dp'
                adaptive_height:True
                pos_hint:{'top':1}
                Image:
                    source:'useicon.png'
                    size_hint:(1,None)
                    allow_stretch:True
                    height:self.texture_size[1]
                MDNavigationDrawerDivider:
    
                TwoLineIconListItem:
                    id:menu_help
                    text:'About'
                    secondary_text:'Mathpath Console tutorial'
                    on_release:
                        root.gohelp()
                        nav_drawer.set_state("close")

                    IconLeftWidget:
                        icon: "information"

                TwoLineIconListItem:
                    id:change_keyboard
                    text:'Use Keyboard'
                    secondary_text:'Current: vMath keyboard'
                    on_release:
                        root.setting_keyboard(p=1)
                        txt1.focus=False
                    IconLeftWidget:
                        id:keyboard_icon
                        icon: "keyboard"

                TwoLineIconListItem:
                    id:change_hint
                    text:'Use hint'
                    secondary_text:'Hints active'
                    on_release:
                        root.setting_keyboard(p=2)
                        txt1.focus=False
                    IconLeftWidget:
                        id:bulb_icon
                        icon: "lightbulb"

                OneLineIconListItem:
                    text:'Support Us'
                    on_release:
                        root.setting_keyboard(p=3)
                        nav_drawer.set_state("close")
                     
                    IconLeftWidget:
                        icon: "star-circle"
                Widget:
                    size_hint_y:None
                    height:self.height
               

                

                         
                

                